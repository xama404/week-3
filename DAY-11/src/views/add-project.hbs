<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/index.css">
    <link rel="stylesheet" href="assets/css/style.css"> 
    <link rel="stylesheet" href="assets/css/myproject.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <!-- nav awal -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img style="height: 50px;" src="https://dumbways.id/assets/images/brandwhite.png" alt="logo dumbways">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/blog">Blog</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/myproject">My Project</a>
              </li>       
            </ul>
            <a href="/contact"><button class="btn btn-warning" type="submit">Contact Me</button></a>            
          </div>
        </div>
      </nav>
      <!-- nav akhir -->

    <section class="add-project">
      <h1>PROJECT BARU</h1>
      <form id="projectForm" onsubmit="submitmyProject(event)">
        <div class="form-group">
          <label for="projectName">Project Name</label>
          <input type="text" class="form-control input-contact2" id="inputProjectName" name="inputProjectName" placeholder="Input your project name">
        </div>
        <div class="form-group flex-group">
          <div class="flex-item">
            <label for="startDate">Start Date</label>
            <input type="date" class="form-control input-contact2" id="inputStartDate" name="startDate">
          </div>
          <div class="flex-item">
            <label for="endDate">End Date</label>
            <input type="date" class="form-control input-contact2" id="inputEndDate" name="endDate">
          </div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control input-contact2" id="inputDescription" name="inputDescription" placeholder="Input your description"></textarea>
        </div>
        <div class="form-group">
          <label>Technologies</label>
          <div class="tech-checkboxes">
            <div class="checkbox-item">
              <input type="checkbox" id="techNodeJs" name="technologies" value="Node.js" class="form-check-input input-checkbox">
              <label for="techNodeJs">Node Js</label>
            </div>
            <div class="checkbox-item">
              <input type="checkbox" id="techNextJs" name="technologies" value="Next.js" class="form-check-input input-checkbox">
              <label for="techNextJs">Next Js</label>
            </div>
            <div class="checkbox-item">
              <input type="checkbox" id="techReactJs" name="technologies" value="React.js" class="form-check-input input-checkbox">
              <label for="techReactJs">React Js</label>
            </div>
            <div class="checkbox-item">
              <input type="checkbox" id="techTypeScript" name="technologies" value="TypeScript" class="form-check-input input-checkbox">
              <label for="techTypeScript">TypeScript</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="uploadImage">Upload Image</label>
          <input type="file" id="inputImage" name="inputImage" class="form-control input-file">
        </div>
        <div class="button-input">
          <button type="submit">Submit</button>
        </div>
      </form>
    </section>

    <h2 class="title-list">MY PROJECT</h2>
    <div id="content" class="blog-list"></div>

    <script src="assets/js/myproject.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
